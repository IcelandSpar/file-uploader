<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Log In</title>

  <link rel="stylesheet" href="/styles.css">

  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Spectral:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;1,200;1,300;1,400;1,500;1,600;1,700;1,800&display=swap" rel="stylesheet">
</head>
<body class="registerBody">
  <%-include('partials/nav-bar') %>
  <div class="folderFlapCont">
    <div class="folderFlap">Log-in</div>
  </div>

  <main class="formContainer">
    <% if(locals.errors) { %>
      <section class="errorSect">
        <h2 class="errorHeading">Please Fix the errors:</h2>
        <ul class="errorUl">
          <%  errors.forEach((errObj) => { %>
            <li class="errorLi">
              <img class="pinBulletImg"  src="/pin.png" alt="pin bullet point" width="25px">
              <p><%= errObj.msg %></p>
            </li>
          <% }) %>
      </ul>
      </section>
    <% } %>
    <form action="/form/log-in" method="POST" class="registerForm">
      <h1 class="formHeading">Log in form</h1>
      <p><%= locals.failureMessage %></p>
      <label class="registerLabels" for="username">Username: </label>

      <div class="registerInputAndImgCont">
        <img class="inputIcon" src="/account-circle.png" alt="account username" width="30px" height="30px">
        <input class="registerInput" type="text" name="username" id="username" placeholder="Enter your username">
      </div>
      <label class="registerLabels" for="password">Password: </label>
      <div class="registerInputAndImgCont">
        <img class="inputIcon" src="/lock.png" alt="account password" width="30px" height="30px">
        <input class="registerInput" type="password" name="password" id="password" placeholder="Enter your password">
      </div>
      <button class="registerSubmitBtn">Submit</button>
    </form>
  </main>
</body>
</html>