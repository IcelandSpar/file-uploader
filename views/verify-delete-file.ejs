<body class="verifyDeleteBody">
  <%- include('partials/nav-bar') %>
  <form class="verifyDeleteForm" action="/form/delete-file/<%= file.id %>" method="POST">
    <h2 class="verifyDeleteHeading">Are you sure you want to delete <%= file.originalName %>?</h2>
    <p class="verifyDeletePara">This will be a permanent change !</p>
    <br>
    <div class="linkAndDeleteButtonCont">
      <a href="/">Home</a>
      <button  class="deleteFileBtn" type="submit">Delete <%= file.originalName %></button>

    </div>

  </form>
</body>
